<h2><%= @recipe.title %></h2>
<h3>Ingredients</h3>
<ul>
<% @recipe.ingredients.each_index do |i| %>
  <li>
  <%= @recipe.ingredients[i] %>
  </li>
<% end %>
</ul>

<h3>Directions</h3>

<ul>
<% @recipe.directions.each_index do |i| %>
<li>
  <%= @recipe.directions[i] %>
</li>
<% end %>  
</ul>
<%= @recipe.cooking_time %>
<%= @recipe.source %>
<%= @recipe.category %>
<%= @recipe.image %>
